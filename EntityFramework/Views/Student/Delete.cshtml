@model Student
<p>
    <b>@Model.StudentName @Model.StudentSurname</b> İsimli Öğrenciyi Silmek İstiyor Musunuz?
</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.StudentId">
    <button type="submit" class="btn btn-danger" >Evet</button>
    <a asp-action="Index" class="btn btn-primary">Hayır</a>
</form>