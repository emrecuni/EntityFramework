@model Course
<h2>Kurs Güncelleme</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Course" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CourseId">
            <div class="mb-3">
                <label for="Title" class="form-label">Kurs Adı</label>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="TeacherId">Öğretmen</label>
                <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div> 
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <ul>
            @foreach(var item in @Model.CourseRegisters)
            {
                <li>
                    @item.Student.FullName
                </li>
            }
        </ul>
    </div>
</div>
