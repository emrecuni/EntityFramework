@model IEnumerable<Teacher>
    <h2>Öğretmen Listesi</h2>
    <a href="/Teacher/Create" class="btn btn-primary">Öğretmen Ekle</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.TeacherId)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Surname)</th>
                <th>@Html.DisplayNameFor(m => m.StartDate)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var teacher in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => teacher.TeacherId)</td>
                <td>@Html.DisplayFor(modelItem => teacher.Name)</td>
                <td>@Html.DisplayFor(modelItem => teacher.Surname)</td>
                <td>@Html.DisplayFor(modelItem => teacher.StartDate)</td>
                <td>
                    <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>